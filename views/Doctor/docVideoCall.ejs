<!-- TABLE VISIT HISTORY -->

<div id="container">
  <div id="main">
    <h2>Vide Audio Chat</h2>
    <div id="demoContainer">
      <div id="connectControls">
        <span><strong>Plesae enter your name:</strong></span>
        <input required type="text" id="txtname" />

        <button id="connectButton" onclick="connect()">Connect</button>
        <button id="hangupButton" disabled="disabled" onclick="hangup()">
          Hangup
        </button>
        <div id="iam">Not yet connected...</div>
        <br />
        <strong>Connected users:</strong>
        <div id="otherClients"></div>
      </div>
      <div id="videos">
        <div
          style="position: relative; float: left;"
          width="1282"
          height="722"
        >
          <video
            autoplay
            playsinline="playsinline"
            id="callerVideo"
          ></video>
          <video
            autoplay
            playsinline="playsinline"
            class="easyrtcMirror"
            id="selfVideo"
            muted="true"
            volume="0"
          ></video>
        </div>
        <!-- each caller video needs to be in it's own div so it's close button can be positioned correctly -->
        <div id="acceptCallBox">
          <!-- Should be initially hidden using CSS -->
          <div id="acceptCallLabel"></div>
          <button id="callAcceptButton">Accept</button>
          <button id="callRejectButton">Reject</button>
        </div>
      </div>
    </div>
    <!--hide-->
    <br style="clear: both;" />

    <!-- End Main Content -->
  </div>
</div>
