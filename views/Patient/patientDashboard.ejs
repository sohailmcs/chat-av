<!--start of profile Template-->
<script id="docProfile-template" type="text/html">
      <div
      class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
      role="document"
    >
      <div class="modal-content">
        <div class="modal-header bg-primary " style="text-align:center">
          <h4>Doctor Profile</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>         
         
        </div>
        <div class="modal-body">

          <div class="media">
        {{#doctorPhoto}}
        <img
        src="{{ProfilePicture}}"
        alt="image"
       style="height: 100px; width: 100px; border-radius: 5px;" />
       {{/doctorPhoto}}
       {{^doctorPhoto}}
       <img
        src="/assets/images/maledoc.png"
        alt="image"
        style="height: 100px; width: 100px; border-radius: 5px; margin:0 10px;" />
       {{/doctorPhoto}} 
        <div>
          <br/>
          <h5 class="docName">
             {{FullName}}
          </h5>
            
          <b>Specialization</b>: {{DoctorSpecialization}}
        </div>
        </div>

          <ul style="padding-left:0;font-size:13px;">
            <br/>
            <br/>

            <div class="container profileArea">
            <div class="row" style="background-color:#F3F8FF;">
               <br/>
               <div class="col-sm-5">              
               <span class="editprofile-icons">Designation :</span>
               </div>
               <div class="col-sm-5 txtnormal">              
              {{Gender}}
               </div>
            </div>
            
             
            <div class="row">
               <br/>
               <div class="col-sm-5">             
               <span class="editprofile-icons">Experience : </span>
               </div>
               <div class="col-sm-5 txtnormal">             
                {{#DoctorExperianceModel}} {{HospitalName}}
               <span>  {{From}} to {{To}} </span>
               {{/DoctorExperianceModel}}
               <br/>
               </div>
             </div>

           
             <div class="row" style="background-color:#F3F8FF;">
                <br/>
                <div class="col-sm-5 ">               
                <span class="editprofile-icons">Proficiency :</span>
                </div>
                <div class="col-sm-7 txtnormal">
                {{#DoctorEducationsModel}}
               <span>Get {{Degree}} In {{YearsOfCompletion}} </span>
               {{/DoctorEducationsModel}}
               
               </div>
             </div>
     
           <div class="row">             
              <div class="col-sm-5">             
              <span class="editprofile-icons">Career :</span>
             
              </div>
              <div class="col-sm-7 txtnormal">             
                {{#DoctorExperianceModel}}
                <span>{{Designation}} at {{HospitalName}}  </span>
                {{/DoctorExperianceModel}}
                </div>

             </div>
            </div>
           
          </ul>
        </div>
       
      </div>
    </div>   
  </script>
<!--end of profile Template-->

