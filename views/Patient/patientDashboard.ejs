<!--start of call accepted model-->
<div class="modal fade text-left" id="notificationmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel160"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header bg-primary " style="text-align:center">
        <h4>Call Received</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>                
      </div>
      <br />
      <div class="modal-body" style="text-align: center;">
        <div style="text-align: center;">
          <img src="/assets/Frame 10 (1).png" alt="Calling " />
        </div>
        <br />
        <p><strong>
          Your Token number is <span id="spanTokenNo"></span>
          <br />
          The doctor will be call you after <span id="waitingTime"></span> minutes. As per our policy each patient is provided the 15
          minutes of consultation.</strong>

        </p>
        <br />
      </div>
    </div>
  </div>
</div>
<!--end of call accepted model-->
<!--start of reject call-->
<div class="modal fade text-left" id="dialogRejected" tabindex="-1" role="dialog" aria-labelledby="myModalLabel160"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">

      <div class="modal-header bg-primary " style="text-align:center">
        <h4>Call rejected</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>         
       
      </div>
      <div class="modal-body" style="text-align: center;">
        <br />

        <h5 class="txtnormal">
          <i>Your call has been rejected by doctor because of some reason.
            Please try again latter
          </i>
        </h5>
        <br />

        <h5 class="txtnormal">
          <i>or you can try to book Appointment with doctor</i>
        </h5>
        <br />
        <br />
      </div>
    </div>
  </div>
</div>
<!--end of reject call -->
    
<!--start of request call Model-->
<div class="modal fade text-left" id="reqcall" tabindex="-1" role="dialog" aria-labelledby="myModalLabel160"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header bg-primary ">
        <h4 id="myModalLabel160">
          Request a Call
        </h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>       
      </div>
      <div class="modal-body" style="text-align: center;">
        <div style="text-align: center; margin:12px 0; ">
          <img src="/assets/Frame 10.png" alt="Calling " />
        </div>
        <br>
        <p  class="txtnormal"><strong>Your request has been sent to doctor. <br>
          Please wait.</strong></p>
      </div>
    </div>
  </div>
</div>
<!--end of request call Model-->


